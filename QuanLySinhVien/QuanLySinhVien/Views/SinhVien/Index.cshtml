@model IEnumerable<QuanLySinhVien.Models.SinhVien>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HoTen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NgaySinh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DienThoai)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.khoa)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HoTen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgaySinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DienThoai)
            </td>
            <td>
                @{

                    QLSVContext db = new QLSVContext();
                    var tenKhoa = db.Khoa.SingleOrDefault(w => w.MaKhoa == item.Makhoa);
                }
                <span>@tenKhoa.TenKhoa</span>
            </td>
            <td>
                <a asp-action="Edit" asp-route-maSV="@item.MaSV">Edit</a> |
                <a asp-action="Details" asp-route-maSV="@item.MaSV">Details</a> |
                <a asp-action="Delete" asp-route-maSV="@item.MaSV">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
